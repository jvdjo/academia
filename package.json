{
	"name": "academia-pro-full",
	"version": "2.0.0",
	"description": "Academia Pro - Planejador de Treinos Completo (Frontend + Backend)",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node server.js",
		"build:frontend": "npm --prefix frontend install --production=false && npm --prefix frontend run build",
		"build": "npm run build:frontend && echo Build completed",
		"dev": "node server.js",
		"dev:api": "npm run dev --prefix backend",
		"dev:frontend": "npm run dev --prefix frontend",
		"dev:local": "concurrently -k -n API,WEB -c yellow,cyan \"npm:dev:api\" \"npm:dev:frontend\"",
		"test": "echo 'Tests not implemented yet'"
	},
	"keywords": [
		"academia",
		"treino",
		"fitness",
		"fullstack",
		"node",
		"express"
	],
	"author": "Academia Pro Team",
	"license": "MIT",
	"dependencies": {
		"express": "^4.18.2",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"morgan": "^1.10.0",
		"bcryptjs": "^2.4.3",
		"jsonwebtoken": "^9.0.2",
		"dotenv": "^16.3.1",
		"joi": "^17.11.0"
	},
	"devDependencies": {
		"concurrently": "^8.2.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
